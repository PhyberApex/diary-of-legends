<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <appenders>
    <File name="logfile" fileName="logs/log.log" append="false">
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%-5p] %c{2}: %m%n"/>
    </File>
    <Console name="STDOUT" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss} [%-5p] [%t] %C{2} (%F:%L): %m%n"/>
    </Console>
  </appenders>
  <loggers>
  	<root level="all">
      <appender-ref ref="STDOUT"/>
    </root>
     <logger name="de.phyberapex.diaryoflegends" level="all">
      <appender-ref ref="logfile"/>
      </logger>
       <logger name="de.phyberapex.diaryoflegends.base.Initializer" level="all">
      <appender-ref ref="STDOUT"/>
    </logger>
  </loggers>
</configuration>